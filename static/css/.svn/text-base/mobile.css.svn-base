body {
  font-family:Verdana;
  font-size:10em;
}

h1 {
  font-size: 4em;
  line-height: 1.5em;
  margin: 0.75em 0;
	color:#0FF;
}

h2 {
  font-size: 2.5em;
  margin: 1em 0; /* Equivalent to 1.5em in the page's base font: 1.5 / 1.5 = 1em */
	color:#0FF;
}


h3 {
  font-size: 2em;
  margin: 1.154em 0; /* Equivalent to 1.5em in the page's base font: 1.5 / 1.3 = 1.154 */
	color:#555;
}

a:link {
	color: #8B0E04;
	text-decoration: none;
}

a:visited {
	color: #8B0E04;
	text-decoration: none;
}

a:hover,
a:focus {
text-decoration: underline;
}

a:active {
}

button {
  font-family:Verdana;
  font-size:100%;
  padding:0;
  color: #8B0E04;
  font-weight:bold;
  background-color:#FFF;
  border:none;
}

div#reading_pane {
  float:left;
  width:70%;
}

div#scoring_pane {
  float:right;
  width:20%;
  padding-right:5%;
}

#reading_pane iframe {
  width:100%;
}